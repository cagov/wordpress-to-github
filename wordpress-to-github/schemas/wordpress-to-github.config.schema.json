{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for a single wordpress-to-github endpoint",
  "definitions": {
    "URL": {
      "type": "string",
      "pattern": "^(https?|wss?|ftp)://"
    },
    "wordpress_to_github_config": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "outputBranch": {
          "type": "string",
          "description": "What branch to deploy to?",
          "examples": [
            "staging",
            "master"
          ],
          "default": "main"
        },
        "disabled": {
          "type": "boolean",
          "description": "set to true to disable processing",
          "default": false
        },
        "PostPath": {
          "type": "string",
          "description": "Where should the posts go?",
          "examples": [
            "wordpress/posts"
          ]
        },
        "PagePath": {
          "type": "string",
          "description": "Where should the pages go?",
          "examples": [
            "wordpress/pages"
          ]
        },
        "MediaPath": {
          "type": "string",
          "description": "where should image media go?",
          "examples": [
            "wordpress/media"
          ]
        },
        "GeneralFilePath": {
          "type": "string",
          "description": "The full path and filename for a 'general' file that contains information about the whole site.",
          "examples": [
            "wordpress/general/general.json"
          ]
        },
        "ExcludeProperties": {
          "type": "array",
          "default": [],
          "description": "Which properties should we suppress in output?",
          "examples": [
            [
              "content",
              "_links"
            ]
          ]
        },
        "tags_exclude": {
          "type": "array",
          "default": [],
          "description": "Ignore Pages/Posts with these tags (Case sensitive!).",
          "examples": [
            [
              "staging",
              "development"
            ]
          ],
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "type": "object",
  "required": [
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "meta": {
      "type": "object"
    },
    "data": {
      "type": "object",
      "required": [
        "wordpress_source_url",
        "github_targets"
      ],
      "additionalProperties": false,
      "properties": {
        "wordpress_source_url": {
          "$ref": "#/definitions/URL",
          "description": "URL of the Wordpress instance to read from",
          "examples": [
            "https://mywpinstance.azurewebsites.net"
          ]
        },
        "github_targets": {
          "description": "List of Github targets to run.",
          "type": "array",
          "default": [],
          "uniqueItems": true,
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/wordpress_to_github_config"
          },
          "examples": [
            {
              "outputBranch": "main",
              "disabled": false,
              "PostPath": "wordpress/posts",
              "PagePath": "wordpress/pages",
              "MediaPath": "wordpress/media",
              "GeneralFilePath": "wordpress/general/general.json",
              "ExcludeProperties": [
                "content",
                "_links"
              ],
              "tags_exclude": [
                "staging",
                "development"
              ]
            },
            {
              "outputBranch": "staging",
              "disabled": false,
              "PostPath": "wordpress/posts",
              "PagePath": "wordpress/pages",
              "MediaPath": "wordpress/media",
              "GeneralFilePath": "wordpress/general/general.json",
              "ExcludeProperties": [
                "content",
                "_links"
              ],
              "tags_exclude": [
                "development"
              ]
            }
          ]
        }
      }
    }
  }
}