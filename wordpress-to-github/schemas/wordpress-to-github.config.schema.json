{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for a single wordpress-to-github endpoint",
  "definitions": {
    "URL": {
      "type": "string",
      "pattern": "^(https?|wss?|ftp)://"
    },
    "wordpress_to_github_config": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "outputBranch": {
          "type": "string",
          "description": "What branch to deploy to?",
          "examples": [
            "staging",
            "master"
          ],
          "default": "main"
        },
        "disabled": {
          "type": "boolean",
          "description": "set to true to disable processing",
          "default": false
        },
        "PostPath": {
          "type": "string",
          "description": "Where should the posts go?",
          "examples": [
            "wordpress/posts"
          ]
        },
        "PagePath": {
          "type": "string",
          "description": "Where should the pages go?",
          "examples": [
            "wordpress/pages"
          ]
        },
        "MediaPath": {
          "type": "string",
          "description": "where should image media go?",
          "examples": [
            "wordpress/media"
          ]
        },
        "ExcludeProperties": {
          "type": "array",
          "default": [],
          "description": "Which properties should we suppress in output?",
          "examples": [
            [
              "content",
              "_links"
            ]
          ]
        },
        "tags_exclude": {
          "type": "array",
          "default": [],
          "description": "Ignore Pages/Posts with these tags.",
          "examples": [
            [
              "staging",
              "development"
            ]
          ],
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "type": "object",
  "required": [
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "meta": {
      "type": "object"
    },
    "data": {
      "type": "object",
      "required": [
        "wordpress_source_url",
        "github_target"
      ],
      "additionalProperties": false,
      "properties": {
        "wordpress_source_url": {
          "$ref": "#/definitions/URL",
          "description": "URL of the Wordpress instance to read from",
          "examples": [
            "https://mywpinstance.azurewebsites.net"
          ]
        },
        "github_target": {
          "type": "object",
          "properties": {
            "template": {
              "description": "Optional common fields to use as starting point for targets.",
              "$ref": "#/definitions/wordpress_to_github_config",
              "examples": [
                {
                  "disabled": false,
                  "PostPath": "wordpress_output/posts",
                  "PagePath": "wordpress_output/pages",
                  "MediaPath": "wordpress_output/media",
                  "ExcludeProperties": [
                    "content",
                    "_links"
                  ]
                }
              ]
            },
            "targets": {
              "description": "List Github targets to override the template and run (different branch output maybe).",
              "type": "array",
              "default": [],
              "uniqueItems": true,
              "minItems": 1,
              "examples": [
                [
                  {
                    "outputBranch": "main",
                    "tags_exclude": [
                      "staging",
                      "development"
                    ]
                  },
                  {
                    "outputBranch": "staging",
                    "tags_exclude": [
                      "development"
                    ]
                  }
                ]
              ],
              "items": {
                "$ref": "#/definitions/wordpress_to_github_config"
              }
            }
          }
        }
      }
    }
  }
}